@model Meals.Models.EasyFood

@{
     ViewData["Title"] = "請新增菜品";
}

<h1>EasyFood</h1>

<hr />
<div class="row">
    <div class="p-3 mb-2 bg-secondary text-white">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">品名</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">價格</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealStyle" class="control-label">中餐還是西餐</label>
                <input asp-for="MealStyle" class="form-control" />
                <span asp-validation-for="MealStyle" class="text-danger"></span>
            </div>
             <div class="form-group">
                <input type="submit" value="送出" class="btn btn-primary" />
            </div>
            </form>
    </div>
</div>
